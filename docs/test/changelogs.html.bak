<!DOCTYPE html>
<html lang="de">
<head><style>body{font-family:'Mojangles', Arial;}</style>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Changelogs</title>
    <script src="/docs/anti-hack.js"></script>
    <style>
        body { font-family: Arial, sans-serif; margin: 20px; line-height: 1.4; }
        #changelog-container { border: 1px solid #ddd; padding: 10px; margin-bottom: 10px; }
        h2, p { margin: 0; } button:hover { background: #005bb5; }
        button { background: #0078D7; color: #fff; border: 0; padding: 8px 12px; cursor: pointer; }
    </style>
</head>
<body>
    <h1>Alle Changelogs</h1><div id="changelog-container"></div>
    <script>     
        fetch('changelogjson.json')
        .then(response => response.json())
        .then(data => {
            const latest = data[0];
            const changelogHTML = `
                <h2>${latest.version}</h2>
                <p>Ver√∂ffentlicht am: ${latest.date}</p>
                <div>${latest.description}</div>
            `;
            document.getElementById('changelog-container').innerHTML = changelogHTML;
        });
    </script>
</body>
</html>
